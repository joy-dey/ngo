header.main-header
    .top-bar.py-2
        .container
            .row
                .col-lg-7.my-2.my-lg-0.d-flex.justify-content-between.align-items-center.flex-column.flex-lg-row
                    ul.social-icons.list-unstyled.list-inline.mb-0
                        each site in socialSites
                            +generateSocialPages(site.title, site.url)
                    p.mb-0
                        i.mdi.mdi-email.text-white.me-2
                        a(href=`mailto:${emailAddress}`) #{emailAddress}
                    p.mb-0
                        i.mdi.mdi-phone.text-white.me-2
                        a(href=`tel:+91${phoneNumber}`) +91-#{phoneNumber}
                
                .col-lg-5.my-2.my-lg-0.d-flex.justify-content-center.align-items-center.justify-content-lg-end
                    a.text-uppercase.fw-bold.me-2(href="") gallery
                    span.mx-2 |
                    span.text-uppercase.fw-bold.me-2.qr-trigger(onclick='showQr();') donate
    .nav-block
        .container
            nav.navbar.navbar-expand-md.bg-white.shadow-lg.p-3
                .container-fluid
                    a.navbar-brand(href="#") #{websiteName}
                    button(data-bs-toggle="collapse", data-bs-target="#navcol-1", class="navbar-toggler")
                        span.navbar-toggler-icon.d-flex.justify-content-center.align-items-center
                            i.mdi.mdi-menu
                    .collapse.navbar-collapse#navcol-1
                        ul.nav.navbar-nav.ms-auto
                            each option in navOptions
                                +generateNavOptions(option.title, option.url)